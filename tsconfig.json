{
    "compilerOptions": {
        "outDir": "./lib",
        "allowJs": true,
        "target": "ES2020",
        "module": "ESNext",
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "noEmit": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": [
        "./src/**/*"
    ]
}
